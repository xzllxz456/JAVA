package day3Example;

import java.util.Scanner;

public class JavaEx02 {
	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		System.out.println("숫자입력: ");
		int num = sc.nextInt();
		if(num > 90 && num < 100) {
			System.out.println("입력한 수는 90보다 크거나 100보다 작다.");
		}else if(num > 80 && num < 90) {
			System.out.println("입력한 수는 80보다 크거나 90보다 작다.");
		}else if(num > 70 && num < 80) {
			System.out.println("입력한 수는 70보다 크거나 80보다 작다.");
		}else if(num > 60 && num < 70) {
			System.out.println("입력한 수는 60보다 크거나 70보다 작다.");
		}else if(num > 50 && num < 60) {
			System.out.println("입력한 수는 50보다 크거나 60보다 작다.");
		}else if(num > 40 && num < 50) {
			System.out.println("입력한 수는 40보다 크거나 50보다 작다.");
		}else if(num > 30 && num < 40) {
			System.out.println("입력한 수는 30보다 크거나 40보다 작다.");
		}else if(num > 20 && num < 30) {
			System.out.println("입력한 수는 20보다 크거나 30보다 작다.");
		}else if(num > 10 && num < 20) {
			System.out.println("입력한 수는 10보다 크거나 20보다 작다.");
		}else if(num > 0 && num < 10) {
			System.out.println("입력한 수는 0보다 크거나 10보다 작다.");
		}
		//방법 2
		if(num == 100) {
			System.out.println("100입니다");
		}else {
			System.out.println("입력한 수는 " + ((num/10)*10) + "보다크거나" + (((num/10)*10)+10) + "보다작");
		}
		
	}
}	
